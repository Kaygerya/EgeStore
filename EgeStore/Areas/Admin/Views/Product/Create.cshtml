@model EgeStore.Areas.Admin.Models.ProductModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <div class="panel panel-info">
        <h3 class="bg-info">Create Product</h3>
        <div class="panel-body">
            <form asp-area="Admin" asp-controller="Product" asp-action="create" enctype="multipart/form-data" method="post" class="form-horizontal">
                @if (!Model.IsSuccess)
                {
                    <div><span class="text-danger">@Model.Error</span></div>
                }
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input  name="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price" class="control-label"></label>
                    <input  name="Price" type="number" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="file" name="Picture" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>


