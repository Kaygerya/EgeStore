@model EgeStore.Models.Users.PaymentModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="col-md-6">
    <div class="panel panel-info">
        <h3 class="bg-info">Login</h3>
        <div class="panel-body">
            @foreach (var item in Model.Items)
            {
                <div class="row">
                    <div class=" col-sm-4"><img class="img-responsive" src="@item.ImageUrl" style="width:100%;" /></div><div class=" col-sm-4">@item.Name</div><div class=" col-sm-2">@item.Price TL</div><div class=" col-sm-2">@item.Quantity Adet</div>
                </div>
            }

